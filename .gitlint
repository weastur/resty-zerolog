[general]
ignore=body-is-missing
contrib=contrib-allowed-authors
regex-style-search=True

[title-max-length]
line-length=120

[title-must-not-contain-word]
words=crap,darn,damn,wip

[title-min-length]
min-length=10

[body-max-line-length]
line-length=120

[body-min-length]
min-length=10

[ignore-by-author-name]
regex=(dependabot|pre-commit-ci)
